<div class="container index-container">
	<%= link_to("Add Contact", new_contact_path, {:class=> "add-contact"}) %>

</div>

<div class="container contacts-container">
	<% for contact in @contacts %>
		<div class="contact-box" data-id="<%= contact.id %>">
			<div class="thumbnail">
				<%= image_tag(contact.avatar_url, :width=>100, :height=>100) %>
			</div>
			<div class="details">
				<span class="name"><%= contact.name %></span>
				<div class="fields-show">
					<label class="email">Email address:</label>
					<span class="email"><%= contact.email %></span>
					<label class="email">Phone number:</label>
					<span class="phone"><%= contact.phone %></span>
				</div>
				<div class="fields-edit">
					<label class="email">Email address:</label>
					<input type="email" class="email" value="<%= contact.email %>">
					<label class="email">Phone number:</label>
					<input class="phone" value="<%= contact.phone %>">
				</div>

				<div class="actions">
					<span class="fields-show">
						<a href="#" class="edit-contact">Edit</a>
					</span>
					<span class="fields-edit">
						<a href="#" class="save-contact">Save</a>
						<a href="#" class="cancel-edit-contact">Cancel</a>
					</span>
					<a href="#" data-id="<%= contact.id %>" class="delete-contact">Delete</a>
				</div>
			</div>
		</div>
	<% end %>
</div>